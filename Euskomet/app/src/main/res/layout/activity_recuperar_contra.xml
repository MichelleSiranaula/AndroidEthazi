<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarContra">

    <Button
        android:id="@+id/button6"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="96dp"
        android:onClick="volver"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="96dp"
        android:onClick="guardar"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/idRepeContratxt"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Contrase単a nueva"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idContraNuevatxt" />

    <TextView
        android:id="@+id/idRepeContra"
        android:layout_width="137dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="38dp"
        android:text="Contrase単a nueva"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idContraNueva" />

    <TextView
        android:id="@+id/idUsuario"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:text="Usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idUsuariotxt"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idPalaClave"
        android:layout_width="104dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="57dp"
        android:text="Palabra Clave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idUsuario" />

    <EditText
        android:id="@+id/idPalaClavetxt"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Palabra Clave"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idUsuariotxt" />

    <TextView
        android:id="@+id/idContraNueva"
        android:layout_width="137dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="39dp"
        android:text="Contrase単a nueva"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPalaClave" />

    <EditText
        android:id="@+id/idContraNuevatxt"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:hint="Contrase単a nueva"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPalaClavetxt" />
</androidx.constraintlayout.widget.ConstraintLayout>